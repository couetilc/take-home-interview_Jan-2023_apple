<main class="layout-forecast serif">

<article class="card variant-green weather-current">
	<h1>
		Today's <br /> Weather
	</h1>
	<section class="temperatures">
		<div class="temperature-current">
			<span>Temp (째F)</span>
			<%= current_temp %>째
		</div>
		<div class="temperature-max">
			<span>High</span>
			<%= current_temp_max %>째
		</div>
		<div class="temperature-min">
			<span>Low</span>
			<%= current_temp_min %>째
		</div>
	</section>
</article>

<article class="card variant-green weather-metadata">
	<div class="metadata-item item-zip">
		<span>Zip Code</span>
		<%= zip_code %>
	</div>
	<div class="metadata-item item-tz">
		<span>Timezone</span>
		<%= timezone %>
	</div>
	<div class="metadata-item item-time">
		<span>Updated at</span>
		<%= current_time %>
	</div>
	<div class="metadata-item item-cache">
		<span>API Cache Status</span>
		<%= cache_status %>
	</div>
</article>

</main>

<h1>
	Weather Forecast for <%= zip_code %> (Timezone: <%= timezone %>)
</h1>

<p>
	is cached: <%= @is_cached %>
</p>

<h2>
	Current Weather
</h2>
<p>
	temperature (hi/low): <%= current_temp %>
	(<%= current_temp_max %>/<%= current_temp_min %>)
</p>
<p>
	windspeed: <%= windspeed %>
</p>
<p>
	wind direction: <%= wind_direction %>
</p>

<h2>
	Extended Forecast
</h2>

<pre>
<%= pretty_forecast %>
</pre>

<details>
	<summary>Please Note:</summary>
	<ul>
		<li>Temperature is in Fahrenheit. Sorry Celsius fans.</li>
		<li>All times are in the weather forecast's timezone.</li>
	</ul>
</details>
